{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Customer Sample API",
        "description": "Example of a customer API"
    },
    "host": "localhost",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/customers": {
            "get": {
                "summary": "Gets a list of all customers",
                "responses": {
                    "200": {
                        "description": "List of all customer",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Customer"
                            }
                        }
                    }
                }
            }
        },
        "/customers/{id}": {
            "get": {
                "summary": "Gets a specific customer by id",
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "type": "string",
                    "description": "unique identifier of the specific client",
                    "required": true
                }],
                "responses": {
                    "200": {
                        "description": "Customer for the requested id",
                        "schema": {
                            "$ref": "#/definitions/Customer"
                        }
                    },
                    "404": {
                        "description": "Account not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "Customer": {
            "properties": {
                "firstname": {
                    "description": "The customers first name",
                    "type": "string"
                }
            }
        }
    }
}